<p id="notice"><%= notice %></p>

<h1><%=  t('clients') %></h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t('id') %></th>
        <th><%= t('name') %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.id %></td>
          <td><%= client.name %></td>
          <td><%= link_to t('show'), client_path(client),
          class: 'btn btn-info' %></td>
          <td><%= link_to t('edit'), edit_client_path(client),
          class: 'btn btn-warning' %></td>
          <td><%= link_to t('delete'), client_path(client),
          class: 'btn btn-danger', method: :delete,
            data: {
              title: t('attention'),
              confirm: t('confirm_exclusion') + client.name + '?',
              commit: t('delete'), cancel: t('cancel')
            } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to t('new_client'), new_client_path,
class: 'btn btn-primary' %>
