<p id="notice"><%= notice %></p><h1><%=  t('projects') %></h1>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t('id') %></th>
        <th><%= t('description') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.id %></td>
          <td><%= project.description %></td>
          <td><%= link_to t('show'), project_path(project),
          class: 'btn btn-info' %></td>
          <td><%= link_to t('edit'), edit_project_path(project),
          class: 'btn btn-warning' %></td>
          <td><%= link_to t('delete'), project_path(project),
          class: 'btn btn-danger', method: :delete,
            data: {
              title: t('attention'),
              confirm: t('confirm_exclusion') + project.description + '?',
              commit: t('delete'), cancel: t('cancel')
            } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to t('new_project'), new_project_path,
class: 'btn btn-primary' %>
