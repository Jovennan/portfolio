<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= form_for(project) do |f| %>
      <% if project.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(project.errors.count, "error") %>
            prohibited this project from being saved:
          </h2>
          <ul>
          <% project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group"><%= f.label t('description') %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
      <div class="form-group"><%= f.label t('client') %>
        <%= f.collection_select(:client_id, @clients, :id, :name, class: 'form-control') %>
      </div>
      <div class="form-group"><%= f.label t('programmer') %>
        <%= f.select(:programmer_id, class: 'form-control') do %>
          <%= options_from_collection_for_select(Programmer.all, :id, :name) %>
        <% end %>
      </div>
      <div class="actions"><%= f.submit class: 'btn btn-primary' %></div>
    <% end %>
  </div>
</div>
